<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="450">
        <KeyFrameSet>

        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/first_to_second_transition"
        motion:constraintSetEnd="@id/second_item_selected"
        motion:constraintSetStart="@+id/first_item_selected"
        motion:duration="450"
        motion:motionInterpolator="@string/material_motion_easing_accelerated">
        <KeyFrameSet>

        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/second_to_third_transition"
        motion:constraintSetEnd="@id/third_item_selected"
        motion:constraintSetStart="@+id/second_item_selected"
        motion:duration="450"
        motion:motionInterpolator="@string/material_motion_easing_accelerated">
        <KeyFrameSet>

        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/third_to_first_transition"
        motion:constraintSetEnd="@id/first_item_selected"
        motion:constraintSetStart="@+id/third_item_selected"
        motion:duration="450"
        motion:motionInterpolator="@string/material_motion_easing_accelerated">
        <KeyFrameSet>

        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start"></ConstraintSet>

    <ConstraintSet android:id="@+id/end"></ConstraintSet>

    <ConstraintSet android:id="@+id/first_item_selected">
        <Constraint
            android:id="@+id/image_view_card_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="100dp"
            android:rotation="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_left"
            app:layout_constraintStart_toEndOf="@+id/button_right"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/image_view_card_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="10dp"
            android:rotation="-6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_left"
            app:layout_constraintStart_toEndOf="@+id/button_right"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/image_view_card_3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="1dp"
            android:rotation="6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_left"
            app:layout_constraintStart_toEndOf="@+id/button_right"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/second_item_selected">
        <Constraint
            android:id="@+id/image_view_card_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="100dp"
            android:rotation="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_left"
            app:layout_constraintStart_toEndOf="@+id/button_right"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/image_view_card_3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="10dp"
            android:rotation="-6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_left"
            app:layout_constraintStart_toEndOf="@+id/button_right"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/image_view_card_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="1dp"
            android:rotation="6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_left"
            app:layout_constraintStart_toEndOf="@+id/button_right"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/third_item_selected">
        <Constraint
            android:id="@+id/image_view_card_3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="100dp"
            android:rotation="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_left"
            app:layout_constraintStart_toEndOf="@+id/button_right"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/image_view_card_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="10dp"
            android:rotation="-6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_left"
            app:layout_constraintStart_toEndOf="@+id/button_right"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/image_view_card_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="1dp"
            android:rotation="6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_left"
            app:layout_constraintStart_toEndOf="@+id/button_right"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>